    <h1 class="label">Pedidos</h1>
    <%# Comentário no EJS %>

    <h4 class="label">forEach sem tabela:</h4>
    <% pedidos.forEach((pedido) => { %>
        Produto: <%= pedido.produto %> <br>
        Valor: <%= pedido.valor %> <br><br>
    <% }) %>

    <h4 class="label">forEach com tabela:</h4>
    <table border="1">
        <tr>
            <th width="150px">Produto:</th>
            <th>Preço:</th>
        </tr>
            <% pedidos.forEach((pedido)=>{ %>
        <tr>
            <td><%= pedido.produto %></td>
            <td><%= pedido.valor %></td> 
        </tr>
            <% }) %>
    </table>

